<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_products_fragment_filter_header"
    android:layout_width="match_parent"
    android:background="@color/none"
    android:padding="2dip"
    android:layout_height="wrap_content"
    android:gravity="right">

    <EditText
        android:layout_width="0dp"
        android:id="@+id/main_search_bar"
        android:layout_height="wrap_content"
        android:layout_weight=".70"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/home_products_fragment_search_opener_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/ic_search_black" />

    <ImageView
        android:id="@+id/home_products_fragment_filter_options_opener_id"
        android:layout_width="wrap_content"
        android:layout_margin="5dip"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_filter_list_black_24dp" />

</LinearLayout>