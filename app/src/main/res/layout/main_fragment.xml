<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_top_view"></include>
        <include layout="@layout/main_filter_view"></include>


        <!-- View pager to swipe views -->
        <android.support.v4.view.ViewPager
            android:id="@+id/home_pager"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"/>


        <!-- our tablayout to display tabs  -->
        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            app:tabIndicatorColor="@color/BaseColor"
            app:tabBackground="@drawable/tab_color_selector"
            android:layout_gravity="bottom"/>

    </LinearLayout>
    <include layout="@layout/main_menu"></include>
    <include layout="@layout/main_filter"></include>
</android.support.v4.widget.DrawerLayout>