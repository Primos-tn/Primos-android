<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimary</item>
        <item name="colorAccent">@color/WhiteColor</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_black</item>
    </style>

    <style name="AppThemeNoActionBar" parent="@style/AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HashtagView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="tagTextSize">15dip</item>
    </style>

    <style name="Favorite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@color/ColorPrimary</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:textColor">#ffffff</item>-->
        <!--<item name="android:textColorPrimary">#ffffff</item>-->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimary</item>
        <item name="colorAccent">@color/BaseColor</item>
        <!--<item name="android:background">#CCCCCC</item>-->
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">300dip</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>
    <!-- Custom Style defined for the buttons. -->
    <style name="headerText">
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">monospace</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">#494948</item>/>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">5pt</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="appButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/WhiteColor</item>
        <item name="android:shadowColor">#000000</item>
    </style>
    <style name="subHeaderText">
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#ababa9</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">4pt</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="cardButtonText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>

    </style>

    <style name="cardImageIcon">
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_width">15dip</item>
        <item name="android:backgroundTintMode">@color/colorPrimary</item>
        <item name="android:layout_height">15dip</item>
    </style>
    <style name="ProductMenuButton">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="ProductSubTitleButton">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
    </style>
</resources>